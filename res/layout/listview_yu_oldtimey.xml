<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px84"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/px39"
                android:background="@color/background_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_dian" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/px39"
                android:background="@color/background_gray" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/px540"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/px40" >

            <TextView
                android:id="@+id/old_time_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px30"
                android:text="本月"
                android:textColor="@color/textcolor_liebiao"
                android:textSize="@dimen/px26" />

            <ImageView
                android:id="@+id/oldtime_thismonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>