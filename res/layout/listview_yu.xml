<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yu_dikuang"
    android:orientation="vertical"
    android:padding="@dimen/px20" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white1"
        android:padding="@dimen/px18" >

        <ImageView
            android:id="@+id/yu_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/zhutu" />

        <TextView
            android:id="@+id/yu_textnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/yu_image"
            android:background="@drawable/lanse_biaoqian"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/icon_xuanzhong"
            android:textSize="@dimen/px33" />
            <TextView
            android:id="@+id/yu_image_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/textcolor_qita"
            android:textSize="@dimen/px24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white1"
        android:orientation="vertical"
        android:paddingTop="@dimen/px18"
         >

        <TextView
            android:id="@+id/yu_text_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/textcolor_tittle"
            android:textSize="@dimen/px33" />

        <TextView
            android:id="@+id/yu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/px30"
            android:textSize="@dimen/px24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/px50"
            android:layout_marginBottom="@dimen/px50" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/px100"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/yu_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/pinglun"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/yu_collect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/shouchang" />

                <ImageView
                    android:id="@+id/yu_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/fenxiang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal" >
                <TextView 
                    android:id="@+id/yu_weather"
                    android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/hello_world"
                android:textSize="@dimen/px24"
                android:gravity="bottom"
                android:textColor="@color/textcolor_qita"
                    />
                <TextView 
                    android:id="@+id/yu_date"
                    android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/hello_world"
                android:textSize="@dimen/px24"
                  android:gravity="bottom"
                android:textColor="@color/textcolor_qita"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>