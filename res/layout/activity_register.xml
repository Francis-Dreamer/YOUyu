<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglubeijing" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px40" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginLeft="@dimen/px40"
                android:layout_marginRight="@dimen/px40"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px40" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28" />

                <EditText
                    android:id="@+id/edit_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/text_yanzhengma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/px40"
                    android:padding="@dimen/px10"
                    android:text="获取验证码"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/px24" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginRight="@dimen/px40"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px40" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置密码"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:background="@null"
                    android:digits="0123456789abcdefjhigklmnopqrstuvwxyz.*@#$%"
                    android:hint="6-20位数字/字母"
                    android:inputType="textPassword"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginLeft="@dimen/px40"
                android:layout_marginRight="@dimen/px40"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px96"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px40" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核对密码"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28" />

                <EditText
                    android:id="@+id/edit_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20"
                    android:background="@null"
                    android:digits="0123456789abcdefjhigklmnopqrstuvwxyz.*@#$%"
                    android:hint="6-20位数字/字母"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="@dimen/px28" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/register_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:text="同意《隐私与服务协议》"
                android:textColor="@android:color/black"
                android:textSize="@dimen/px40" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/register_check"
                android:layout_below="@id/register_check"
                android:layout_marginRight="@dimen/px30"
                android:background="@null"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20"
                android:textSize="@dimen/px40" 
                android:text="立即加入" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>