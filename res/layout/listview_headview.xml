<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   >
    <ImageView 
        android:id="@+id/wish_icon"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/yu_author"
     android:layout_marginLeft="@dimen/px28"
     android:layout_marginTop="@dimen/px32"
        />
    <LinearLayout 
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@id/wish_icon"
    android:layout_marginLeft="@dimen/px10"
    android:layout_alignTop="@id/wish_icon"
    android:layout_alignBottom="@id/wish_icon"
    android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
   android:layout_height="0dp"
    android:layout_weight="1"
    android:text="@string/hello_world"
    android:textColor="@color/master_blue"
    android:gravity="bottom"
    android:textSize="@dimen/px27"
            />
         <TextView 
            android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:textColor="@color/textcolor_qita"
    android:gravity="top"
    android:textSize="@dimen/px24"
    android:text="@string/hello_world"
            />
    </LinearLayout>

</RelativeLayout>
