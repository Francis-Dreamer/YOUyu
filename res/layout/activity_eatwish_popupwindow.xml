<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.youyu.view.MyLinearLayout
        android:id="@+id/eatwish_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wish_many"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wish_cancel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/wish_cancel" />

        <ImageView
            android:id="@+id/wish_comment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/wish_comment" />

        <ImageView
            android:id="@+id/wish_collect"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/wish_collect" />

        <ImageView
            android:id="@+id/wish_share"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/wish_share" />
    </com.example.youyu.view.MyLinearLayout>

</LinearLayout>