<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px25"
            android:src="@drawable/fanhuifanhui" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="修改个人资料"
            android:textColor="#333333"
            android:textSize="@dimen/px36" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="头像"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30"
            android:scaleType="fitXY"
            android:src="@drawable/touxiangxiang" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="昵称"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/nickname"
            android:background="@null"
            android:hint="渍渍渍"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="性别"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/sex"
            android:background="@null"
            android:hint="女"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="生日"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_birthday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/birthday"
            android:background="@null"
            android:hint="xxxx-xx-xx"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="城市"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/city"
            android:background="@null"
            android:hint="重庆"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="职业"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_profession"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/profession"
            android:background="@null"
            android:hint="设计师"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90" >

        <TextView
            android:id="@+id/autograph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px30"
            android:text="签名"
            android:textColor="#666666"
            android:textSize="@dimen/px24" />

        <EditText
            android:id="@+id/chage_autograph"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/autograph"
            android:background="@null"
            android:hint="天亮了了了了 类"
            android:textColor="#333333"
            android:textSize="@dimen/px30" />

        <ImageView
            android:id="@+id/autograph_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/px25"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/youjianjian" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee" >
    </RelativeLayout>

</LinearLayout>