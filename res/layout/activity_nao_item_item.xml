<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/top_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px28" >

        <TextView
            android:id="@+id/eatwish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hello_world"
            android:textColor="@color/master_blue"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/eatwish_english_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10"
            android:drawableTop="@drawable/itembiaoqian"
            android:gravity="center"
            android:textColor="@color/textcolor_qita"
            android:textSize="@dimen/px20" />

        <TextView
            android:id="@+id/eatwish_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textColor="@color/textcolor_zhengwen"
            android:textSize="@dimen/px27" />
    </LinearLayout>

    <ImageView
        android:id="@+id/eatwish_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/text_peitu" />

    <TextView
        android:id="@+id/eatwish_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/addressbiaoqian"
        android:drawablePadding="@dimen/px10"
        android:paddingBottom="@dimen/px10"
        android:paddingLeft="@dimen/px28"
        android:layout_marginTop="@dimen/px10"
        android:paddingTop="@dimen/px10"
        android:text="@string/hello_world"
        android:textColor="@color/icon_moren"
        android:textSize="@dimen/px24" />

</LinearLayout>