<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/px54" >

        <ImageView
            android:id="@+id/comment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment_icon" />

        <LinearLayout
            android:id="@+id/comment_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/comment_icon"
            android:layout_alignTop="@id/comment_icon"
            android:layout_marginLeft="@dimen/px36"
            android:layout_toRightOf="@id/comment_icon"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/comment_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/hello_world"
                android:textColor="@color/master_blue"
                android:gravity="top"
                android:textSize="@dimen/px26" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/hello_world"
                android:textColor="@color/icon_moren"
                android:textSize="@dimen/px20" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:layout_toRightOf="@id/comment_ll"
            android:background="@drawable/duobianxing"
            android:gravity="center"
            android:textSize="@dimen/px24" 
            android:textColor="#ffffff"
            android:text="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/comment_tubiao" />
        <TextView 
            android:id="@+id/comment_text"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="@string/hello_world"
             android:textColor="#4c4c4c"
             android:textSize="@dimen/px27" 
            android:layout_below="@id/comment_ll"
             android:layout_marginTop="@dimen/px35"
             android:layout_alignLeft="@id/comment_ll"
            />
        <LinearLayout 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_text"
            android:orientation="horizontal"
            android:layout_alignLeft="@id/comment_ll"
            android:layout_marginTop="@dimen/px32"
            android:background="@drawable/comment_backgrund"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px38"
            >
            <TextView 
                android:id="@+id/username"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
             android:textColor="@color/master_blue"
             android:textSize="@dimen/px24" 
                />
             <TextView 
                 android:id="@+id/username_text"
                 android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
             android:textColor="#4c4c4c"
             android:textSize="@dimen/px24" 
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>